<?xml version="1.0" encoding="UTF-8"?>
<web-fragment
		version="3.0"
		id="jawr-manifest"

		xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://java.sun.com/xml/ns/javaee
			http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd
		">

	<name>JawrManifest</name>
	<display-name>Aetheric Web: JAWR Manifest</display-name>

	<servlet>
		<servlet-name>JawrManifest</servlet-name>
		<servlet-class>nz.co.aetheric.web.jawr.manifest.JawrManifestServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>JawrManifest</servlet-name>
		<url-pattern>/appcache.manifest</url-pattern>
	</servlet-mapping>

</web-fragment>